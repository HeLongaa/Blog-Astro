<div class="theme-toggle-wrapper">
    <button id="theme-toggle" class="theme-toggle" title="切换主题">
        <svg
            class="light-icon theme-icon"
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
        >
            <circle cx="12" cy="12" r="5"></circle>
            <path
                d="M12 1v2M12 21v2M4.2 4.2l1.4 1.4M18.4 18.4l1.4 1.4M1 12h2M21 12h2M4.2 19.8l1.4-1.4M18.4 5.6l1.4-1.4"
            ></path>
        </svg>
        <svg
            class="dark-icon theme-icon"
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
        >
            <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
        </svg>
    </button>
</div>

<style lang="less">
    .theme-toggle-wrapper {
        position: relative;
        display: inline-block;
    }

    .theme-toggle {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0.288rem 0.36rem;
        background: transparent;
        border: none;
        cursor: pointer;
        color: inherit;
        outline: none;
        transition: all 0.2s ease;
        height: 1.4rem;
        border-radius: 0.25rem;

        &:hover {
            background: var(--vh-main-color-6);
        }

        .theme-icon {
            display: none;
            width: 1.4rem;
            height: 1.4rem;

            &.active {
                display: block;
            }
        }
    }
</style>
