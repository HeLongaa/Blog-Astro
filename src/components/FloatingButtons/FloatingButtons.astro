---
// 统一的浮动按钮组件
import "./FloatingButtons.less";
---

<!-- 回到顶部按钮 -->
<button class="vh-back-top" id="vh-back-top" title="回到顶部">
    <div class="button-content">
        <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
        >
            <path d="m6 15l6-6l6 6"></path>
        </svg>
        <span class="button-text">顶部</span>
    </div>
</button>

<!-- 评论跳转按钮 -->
<button
    class="vh-comment-jump-button"
    id="vh-comment-jump-button"
    title="跳转到评论区"
>
    <div class="button-content">
        <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
        >
            <path
                d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"
            ></path>
        </svg>
        <span class="button-text">评论</span>
    </div>
</button>

<!-- 移动端目录按钮 -->
<button class="vh-mobile-toc-button" id="vh-mobile-toc-button" title="显示目录">
    <div class="button-content">
        <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
        >
            <path d="M3 6h18"></path>
            <path d="M9 12h12"></path>
            <path d="M9 18h12"></path>
        </svg>
        <span class="button-text">目录</span>
    </div>
</button>

<script>
    import FloatingButtonsInit from "@/scripts/FloatingButtons";
    
    // 初始化统一的浮动按钮管理
    FloatingButtonsInit();
</script>
